{
    "name": "owenvoke/laravel-xdg",
    "type": "library",
    "description": "A Laravel adapter for the XDG Base Directory package.",
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "dnoegel/php-xdg-base-dir": "^0.1.1",
        "illuminate/support": "^6.0|^7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^4.6|^5.0",
        "phpstan/phpstan": "^0.12.5",
        "phpunit/phpunit": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "OwenVoke\\LaravelXdg\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OwenVoke\\LaravelXdg\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "OwenVoke\\LaravelXdg\\XdgServiceProvider"
            ],
            "aliases": {
                "Xdg": "OwenVoke\\LaravelXdg\\Facades\\Xdg"
            }
        }
    }
}
